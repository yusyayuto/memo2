    echo "   ‚úÖ ${PAGE_COUNT} ‰ª∂ÂèñÂæóÔºàÁ¥ØË®à: ${TOTAL_COUNT} ‰ª∂Ôºâ"
    
    # Ê¨°„ÅÆ„Éà„Éº„ÇØ„É≥„ÇíÂèñÂæó
    NEXT_TOKEN=$(echo "$RESULT" | jq -r '.NextToken // empty' 2>/dev/null)
    
    # Ê¨°„ÅÆ„Éà„Éº„ÇØ„É≥„Åå„Å™„ÅÑÂ†¥Âêà„ÅØÁµÇ‰∫Ü
    if [ -z "$NEXT_TOKEN" ] || [ "$NEXT_TOKEN" = "null" ]; then
