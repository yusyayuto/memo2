        (.Resources[2].Region // ""),
        .ProductName // "",
        .CompanyName // "",
        .Region // "",
        (.Process.Name // ""),
        (.Process.Path // ""),
        (.Process.Pid // ""),
        (.Process.ParentPid // ""),
