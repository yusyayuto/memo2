        break
    fi
    
    PAGE=$((PAGE + 1))
    
    # API„É¨„Éº„ÉàÂà∂ÈôêÂØæÁ≠ñÔºàÂ∞ë„ÅóÂæÖÊ©üÔºâ
    sleep 1
    
    # 10„Éö„Éº„Ç∏„Åî„Å®„Å´ÈÄ≤ÊçóË°®Á§∫
    if [ $((PAGE % 10)) -eq 0 ]; then
